########## JS code for Insti CGPA calculator ##########

// Sample course data (replace with your institution's actual data)
const courseData = {
    'CS101': 3,
    'MATH201': 4,
    'ENG102': 3,
    'PHYS101': 4,
    'CHEM101': 4
};

document.getElementById('courseCountForm').addEventListener('submit', function(e) {
    e.preventDefault();
    const courseCount = parseInt(document.getElementById('courseCount').value);
    generateCourseInputs(courseCount);
});

document.getElementById('cgpaForm').addEventListener('submit', function(e) {
    e.preventDefault();
    calculateCGPA();
});

function generateCourseInputs(count) {
    const courseInputs = document.getElementById('courseInputs');
    courseInputs.innerHTML = '';
    
    for (let i = 1; i <= count; i++) {
        courseInputs.innerHTML += `
            <div>
                <label for="course${i}">Course ${i} Code:</label>
                <input type="text" id="course${i}" required>
                <label for="grade${i}">Grade:</label>
                <input type="text" id="grade${i}" required>
            </div>
        `;
    }
    
    document.getElementById('cgpaForm').style.display = 'block';
}

function calculateCGPA() {
    const courses = document.querySelectorAll('[id^="course"]');
    const grades = document.querySelectorAll('[id^="grade"]');
    let totalWeightedCredits = 0;
    let totalCredits = 0;

    for (let i = 0; i < courses.length; i++) {
        const courseCode = courses[i].value.toUpperCase();
        const grade = grades[i].value.toUpperCase();
        
        if (courseData.hasOwnProperty(courseCode)) {
            const credits = courseData[courseCode];
            const gradeWeight = getGradeWeight(grade);
            
            if (gradeWeight !== null) {
                totalWeightedCredits += credits * gradeWeight;
                totalCredits += credits;
            } else {
                alert(`Invalid grade for course ${courseCode}`);
                return;
            }
        } else {
            alert(`Course ${courseCode} not found in the database.`);
            return;
        }
    }

    if (totalCredits === 0) {
        alert("No valid courses entered. Please check your inputs.");
        return;
    }

    const cgpa = totalWeightedCredits / totalCredits;
    document.getElementById('result').innerHTML = `Your CGPA is: ${cgpa.toFixed(2)}`;
}

function getGradeWeight(grade) {
    const gradeWeights = {
        'A': 4.0,
        'B': 3.0,
        'C': 2.0,
        'D': 1.0,
        'F': 0.0
    };

    if (gradeWeights.hasOwnProperty(grade)) {
        return gradeWeights[grade];
    } else {
        alert(`Invalid grade: ${grade}`);
        return null;
    }
}
